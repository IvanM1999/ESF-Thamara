# Porta do servidor (Padrão: 3061)
PORT=3061

# String de conexão com o banco de dados PostgreSQL
# Exemplo local: postgres://usuario:senha@localhost:5432/nome_do_banco
# Exemplo Render: fornecido automaticamente pelo serviço
DATABASE_URL=postgres://user:password@host:port/database

# Segredo para assinar os tokens JWT (Autenticação administrativa)
JWT_SECRET=seu_segredo_super_seguro_aqui

# Token para permitir a criação do primeiro usuário administrador via rota /api/admin/create
SETUP_TOKEN=token_para_setup_inicial